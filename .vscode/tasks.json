{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc-9 сборка активного файла",
            "command": "/usr/bin/gcc-9",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${fileDirname}/s21_smart_calc.c",
                "${fileDirname}/parser.c",
                "${fileDirname}/OPN.c",
                "${fileDirname}/support_func.c",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}", 
                "-lm"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Задача создана отладчиком."
        }
    ],
    "version": "2.0.0"
}